{
    "compilerOptions": {
      "module": "commonjs",
      "esModuleInterop": true,
      "target": "esnext",
      "moduleResolution": "node",
      "sourceMap": true,
      "outDir": "./dist",
      "allowJs": true,
      "lib": ["dom", "es6"],
      "baseUrl": "./",
      "paths": {
        "@/*": [
          "./*"
        ]
      }
    },
    "exclude": [
      "node_modules",
      "dist"
    ],
    "include": [
      "**/*.ts",
      "tests/**/*.spec.ts"
    ],
    "files": [
      "app.ts"
    ]
  }